<h2 id="sectionTitle">Enrollee List</h2>
<div class="header-row">
    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Search Enrollees">
        <button id="searchButton">Search</button>
    </div>
</div>

<table id="enrolleeTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Complete Name</th>
            <th>First Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <!-- Table body will be dynamically updated -->
    </tbody>
</table>

<div class="footer-row">
    <div id="recordInfo">Showing 1-10 of 50 records</div>
    <div id="paginationButtons">
        <button id="prevPageButton">Previous</button>
        <button id="nextPageButton">Next</button>
    </div>
</div>

<!-- View/Edit Modal -->
<div id="editEnrolleeModal" class="modal">
    <div class="modal-content">
        <span class="close" id="closeEditModal">&times;</span>
        <form id="editEnrolleeForm">
            <input type="hidden" name="id" id="editId">
            <label for="editLastName">Complete Name:</label>
            <input type="text" name="last_name" id="editLastName" required>
            <label for="editEmail">Email:</label>
            <input type="email" name="email" id="editEmail" required>
            <label for="editMobile">Mobile:</label>
            <input type="text" name="contact_mobile" id="editMobile" required>
            <label for="editYear">Year Level:</label>
            <input type="text" name="year_level" id="editYear" required>
            <label for="editProgram">Program:</label>
            <input type="text" name="program" id="editProgram" required>
            <button type="submit">Save</button>
        </form>
    </div>
</div>

<!-- Enroll Modal -->
<div id="enrollModal" class="modal">
    <div class="modal-content">
        <span class="close" id="closeEnrollModal">&times;</span>
        <form id="enrollForm">
            <input type="hidden" name="id" id="enrollId">
            <label for="studentId">Student ID:</label>
            <input type="text" id="studentId" name="student_id" required>
            <label for="sectionId">Section:</label>
            <select id="sectionId" name="section_id" required>
                <!-- Sections will be dynamically populated -->
            </select>
            <button type="submit">Enroll</button>
        </form>
    </div>
</div>


<div id="customConfirmModal" class="modal1">
    <div class="modal-content1">
        <h3>Confirm Deletion</h3>
        <p>Are you sure you want to delete this enrollee?</p>
        <div class="modal-actions">
            <button id="confirmDeleteButton" class="btn btn-danger delete-btn">Delete</button>
            <button id="cancelDeleteButton" class="btn btn-secondary cancel-btn">Cancel</button>
        </div>
    </div>
</div>


