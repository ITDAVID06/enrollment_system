<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #e1b7b7; /* Light red-pinkish background */
            color: #960000; /* Dark red text */
        }
        .modal-content {
            border: 2px solid #960000; /* Red border */
        }
        .modal-header, .modal-footer {
            background-color: #960000; /* Dark red background */
            color: white; /* White text for contrast */
        }
        .btn-primary {
            background-color: #960000; /* Dark red button */
            border-color: #960000;
        }
        .btn-primary:hover {
            background-color: #e1b7b7; /* Hover effect */
            border-color: #960000;
            color: #960000;
        }
    </style>
</head>
<body>
    <!-- Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Success</h5>
                </div>
                <div class="modal-body">
                    {{message}}
                </div>
                <div class="modal-footer">
                    <a href="/" class="btn btn-primary">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Initialize Modal -->
    <script>
        // Show the modal
        const successModal = new bootstrap.Modal(document.getElementById('successModal'));
        successModal.show();
        // Redirect after 8 seconds to give the user time to see the modal
        setTimeout(() => {
            window.location.href = '/';
        }, 8000); // Adjust the time in milliseconds (8000 = 8 seconds)
    </script>
</body>
</html>