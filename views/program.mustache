<div>
    <h2>Program List</h2>
    <button id="addProgramButton">Add Program</button>

    <table border="1" id="programTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Program Code</th>
                <th>Title</th>
                <th>Years</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Populated via JavaScript -->
        </tbody>
    </table>
</div>

<!-- Add Program Modal -->
<div id="addProgramModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>Add Program</h3>
        <form id="addProgramForm">
            <label for="programCode">Program Code:</label>
            <input type="text" id="programCode" name="program_code" required>

            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>

            <label for="years">Years:</label>
            <input type="number" id="years" name="years" required>

            <button type="submit">Submit</button>
        </form>
    </div>
</div>

<!-- Edit Program Modal -->
<div id="editProgramModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>Edit Program</h3>
        <form id="editProgramForm">
            <input type="hidden" id="editProgramId" name="id">

            <label for="editProgramCode">Program Code:</label>
            <input type="text" id="editProgramCode" name="program_code" required>

            <label for="editTitle">Title:</label>
            <input type="text" id="editTitle" name="title" required>

            <label for="editYears">Years:</label>
            <input type="number" id="editYears" name="years" required>

            <button type="submit">Update</button>
        </form>
    </div>
</div>


<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 100px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: auto;
        padding: 20px;
        border: 1px solid #888;
        width: 50%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }
</style>


