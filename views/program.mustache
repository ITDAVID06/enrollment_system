<div>
    <h2 id="programTitle">Program List</h2>
    <div class="header-row">
        <div class="search-container">
            <input type="text" placeholder="Search..." id="searchInput">
            <button id="searchButton">Search</button>
        </div>
        <button id="addProgramButton">Add Program</button>
    </div>

    <table border="1" id="programTable">
        <thead>
            <tr>
                <th>ID</th>
                <th>Program Code</th>
                <th>Title</th>
                <th>Years</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <!-- Populated via JavaScript -->
        </tbody>
    </table>

    <!-- Pagination Controls -->
    <div id="pagination">
        <div style="flex-grow: 1;"></div>
        <div id="recordInfo"></div>
        <div id="paginationButtons">
            <button id="prevPageButton" disabled>←</button>
            <button id="nextPageButton" disabled>→</button>
        </div>
    </div>
</div>

<!-- Add Program Modal -->
<div id="addProgramModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>Add Program</h3>
        <form id="addProgramForm">
            <label for="programCode">Program Code:</label>
            <input type="text" id="programCode" name="program_code" required>

            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required>

            <label for="years">Years:</label>
            <input type="number" id="years" name="years" required>

            <button type="submit">Submit</button>
        </form>
    </div>
</div>

<!-- Edit Program Modal -->
<div id="editProgramModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h3>Edit Program</h3>
        <form id="editProgramForm">
            <input type="hidden" id="editProgramId" name="id">

            <label for="editProgramCode">Program Code:</label>
            <input type="text" id="editProgramCode" name="program_code" required>

            <label for="editTitle">Title:</label>
            <input type="text" id="editTitle" name="title" required>

            <label for="editYears">Years:</label>
            <input type="number" id="editYears" name="years" required>

            <button type="submit">Update</button>
        </form>
    </div>
</div>



