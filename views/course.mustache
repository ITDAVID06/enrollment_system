<div id="coursePage" class="container">
    <!-- Left Panel -->
    <div id="leftPanel" class="panel">
        <h3>College Programs</h3>
        <ul id="programList">
            {{#programs}}
            <li class="programItem" id="program{{id}}" onclick="selectProgram({{id}})">{{program_code}}</li>
            {{/programs}}
        </ul>
        <h3>Semester</h3>
        <div class="semesterButtons">
            <button onclick="filterSemester('1st Sem')" class="semesterButton" id="semester1">1st Sem</button>
            <button onclick="filterSemester('2nd Sem')" class="semesterButton" id="semester2">2nd Sem</button>
        </div>
        <h3>Year Level</h3>
        <div class="yearSelection">
            <button onclick="filterYear(1)" class="yearButton" id="year1">1st Year</button>
            <button onclick="filterYear(2)" class="yearButton" id="year2">2nd Year</button>
            <button onclick="filterYear(3)" class="yearButton" id="year3">3rd Year</button>
            <button onclick="filterYear(4)" class="yearButton" id="year4">4th Year</button>
        </div>
    </div>

    <!-- Right Panel -->
    <div id="rightPanel" class="panel">
        <div class="header">
            <h2 id="selectedProgram" class="programTitle">BSIT - Bachelor of Science in Information Technology</h2>
            <div class="searchContainer">
                <div class="searchWrapper">
                    <input type="text" placeholder="Search courses..." id="searchInput">
                    <button id="searchButton">
                        <span class="material-symbols-rounded searchbutton">search</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="controls">

            <button id="addCourseButton">Add Course</button>
        </div>

        <table border="1" id="courseTable">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Course Title</th>
                    <th>Unit</th>
                    <th>Semester</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Populated dynamically -->
            </tbody>
        </table>
        <div class="pagination">
            <button id="prevPageButton" class="pagination-button" disabled>←</button>
            <span id="pageInfo">Page 1</span>
            <button id="nextPageButton" class="pagination-button">→</button>
        </div>
    </div>
</div>

<div id="addCourseModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeAddCourseModal()">&times;</span>
        <h3>Add Course</h3>
        <form id="addCourseForm">
            <!-- Hidden fields for program_id and year -->
            <input type="hidden" id="addProgramId" name="program_id">
            <input type="hidden" id="addYear" name="year">

            <div class="form-group">
                <label for="courseCode">Course Code*</label>
                <input type="text" id="courseCode" name="course_code" required>
            </div>

            <div class="form-group">
                <label for="courseTitle">Title*</label>
                <input type="text" id="courseTitle" name="title" required>
            </div>

            <div class="form-group">
                <label for="courseUnit">Unit*</label>
                <input type="number" id="courseUnit" name="unit" required>
            </div>

            <div class="form-group">
                <label for="courseSemester">Semester*</label>
                <select id="courseSemester" name="semester" required>
                    <option value="1st Sem">1st Semester</option>
                    <option value="2nd Sem">2nd Semester</option>
                </select>
            </div>

            <div class="modal-buttons">
                <button type="button" class="close-button" onclick="closeAddCourseModal()">Close</button>
                <button type="submit" class="action-button">Add Course</button>
            </div>
        </form>
    </div>
</div>

<div id="editCourseModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeEditCourseModal()">&times;</span>
        <h3>Edit Course</h3>
        <form id="editCourseForm">
            <!-- Hidden field for course ID -->
            <input type="hidden" id="editCourseId" name="id">

            <div class="form-group">
                <label for="editCourseCode">Course Code*</label>
                <input type="text" id="editCourseCode" name="course_code" required>
            </div>

            <div class="form-group">
            <label for="editCourseTitle">Title:</label>
            <input type="text" id="editCourseTitle" name="title" required>
            </div>
            <div class="form-group">
            <label for="editCourseUnit">Unit:</label>
            <input type="number" id="editCourseUnit" name="unit" required>
            </div>    
            <div class="form-group">
            <label for="editCourseSemester">Semester:</label>
            <select id="editCourseSemester" name="semester" required>
                <option value="1st Sem">1st Sem</option>
                <option value="2nd Sem">2nd Sem</option>
            </select>
            </div>
            <div class="form-group">
            <label for="editCourseYear">Year:</label>
            <input type="number" id="editCourseYear" name="year" required>
            </div>
            <button class="modal-buttons action-button" type="submit">Update Course</button>
        </form>
    </div>
</div>

</div> 

